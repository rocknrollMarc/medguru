<div class="dataTables_wrapper form-inline dt-bootstrap">
  <%= render 'admin/shared/box_header' %>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-bordered table-striped dataTable">
        <thead>
          <tr role="row">
            <th>Name</th>
            <th>Anzahl Unterkategoriesn</th>
            <th></th>
          </tr>
        </thead>
        <% if questions.any? %>
        <tbody>
          <% for category in categories %>
          <tr role="row">
            <td><%= category.name %></td>
            <td><%= category.categories.count %></td>
            <td><%= link_to 'Details', admin_category_path(category) %></td>
          </tr>
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-5">
      <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Zeige
        <%= categories.current_page * categories.offset_value + 1 %>
        bis
        <%= categories.current_page * categories.offset_value  + categories.count %>
        von
        <%= categories.total_count %>
        Eintr√§ge</div>
    </div>
    <div class="col-sm-7">
      <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
        <%= paginate categories %>
      </div>
    </div>
  </div>
</div>
