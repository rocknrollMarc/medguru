<% content_for :content_header do %>
<section class="content-header">
  <h1>
    Neue Seite
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_root_path do %>
      <i class="fa fa-dashboard"></i>
      Home - Dashboard
      <% end %>
    </li>
    <li>
      <%= link_to admin_pages_path  do %>
      <i class="fa fa-file-text"></i>
      <span>Seiten</span>
      <% end %>
    </li>
    <li class="active">
      <%= link_to new_admin_page_path  do %>
      <i class="fa fa-file-text"></i>
      <span>Seiten</span>
      <% end %>
    </li>
  </ol>
</section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Neue Seite</h3>
        <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Abbrechen">
          <%= link_to 'Abbrechen', admin_pages_path, type: "button", class:"btn btn-default btn-sm", title: 'Neue Seite erstellen' %>
        </div>
      </div>

      <%= form_for @page, :url => admin_pages_path(), :html => { :class => :form, role: 'form' } do  |f| %>
      <div class="box-body">
        <%= render 'form', f: f %>
      </div>
      <% end %>
    </div>
