<% content_for :content_header do %>
<section class="content-header">
  <h1>
    Seiten
    <small>
      CMS</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_root_path do %>
      <i class="fa fa-dashboard"></i>
      Home - Dashboard
      <% end %>
    </li>
    <li class="active">
      <%= link_to admin_pages_path  do %>
      <i class="fa fa-file-text"></i>
      <span>Seiten</span>
      <% end %>
    </li>
  </ol>
</section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Alle Seiten</h3>
        <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Neue Seite erstellen">
            <%= link_to 'Neue Seite erstellen', new_admin_page_path, type: "button", class:"btn btn-default btn-sm", title: 'Neue Seite erstellen' %>
        </div>
      </div>

      <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
          <div class="row">
            <div class="col-sm-6">
              <div class="dataTables_length" id="example1_length">
                <label>Show
                  <select name="per" aria-controls="per" class="form-control input-sm">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                  </select>
                  Eintr√§ge</label>
              </div>
            </div>
            <div class="col-sm-6">
              <div id="example1_filter" class="dataTables_filter">
                <label>Suche:<input type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <%= just_tree  @pages,  namespace: :backend, rebuild_url: rebuild_admin_pages_url, type: :sortable  %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
            </div>
            <div class="col-sm-7">
              <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                <%= paginate @pages if @pages.any? %>
              </div>
            </div>
          </div>
        </div>
      </div>
