<% content_for :content_header do %>
<section class="content-header">
  <h1>
Benutzer Ã¼bersicht
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_root_path do %>
      <i class="fa fa-dashboard"></i>
      Home - Dashboard
      <% end %>
    </li>
    <li class="active">
      <%= link_to admin_users_path  do %>
      <i class="fa fa-users"></i>
      <span>Benutzer</span>
      <% end %>
    </li>
  </ol>
</section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Alle Benutzer</h3>
      </div>

      <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
          <%= render 'admin/shared/box_header' %>
          <div class="row">
            <div class="col-sm-12">
              <table class="table">
                <tr>
                  <th>ID</th>
                  <th>E-Mail</th>
                  <th>Benutzername</th>
                  <th>Rolle</th>
                  <th>Aktionen</th>
                </tr>
                <% for user in @users %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.name %></td>
                    <td><%= user.roles.map{|x| x.name }.join(',') %>
                    <td><%= link_to 'Details zeigen', admin_user_path(user) %>
                  </tr>
                <% end %>

              </table>


            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
            </div>
            <div class="col-sm-7">
              <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                <%= paginate @users if @users.any? %>
              </div>
            </div>
          </div>
        </div>
      </div>
