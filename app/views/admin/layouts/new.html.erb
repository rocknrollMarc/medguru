<% content_for :content_header do %>
<section class="content-header">
  <h1>
    Neues Layout
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_root_path do %>
      <i class="fa fa-dashboard"></i>
      Home - Dashboard
      <% end %>
    </li>
    <li class="active">
      <%= link_to new_admin_layout_path  do %>
      <i class="fa fa-question"></i>
      <span>Neues Layout</span>
      <% end %>
    </li>
  </ol>
</section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Neues Layout</h3>

      </div>

      <div class="box-body">

        <%= nested_form_for [:admin, @layout] do |f| %>
        <%= render 'form', f: f %>
        <% end %>

      </div>
    </div>
  </div>
</div>
