<% content_for :content_header do %>
<section class="content-header">
  <h1>
    Layout Ãœbersicht
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_root_path do %>
      <i class="fa fa-dashboard"></i>
      Home - Dashboard
      <% end %>
    </li>
    <li class="active">
      <%= link_to admin_layouts_path  do %>
      <i class="fa fa-edit"></i>
      <span>Layout</span>
      <% end %>
    </li>
  </ol>
</section>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Alle Layouts</h3>

        <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Neue Layout erstellen">
            <%= link_to 'Neue Layout erstellen', new_admin_layout_path, type: "button", class:"btn btn-default btn-sm", title: 'Neue Layout erstellen' %>
        </div>


      </div>

      <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
          <%= render 'admin/shared/box_header' %>
          <div class="row">
            <div class="col-sm-12">
              <table class="table">
                <tr>
                  <th>ID</th>
                  <th>Layoutname</th>
                  <th>Template Name</th>
                  <th>Aktionen</th>
                </tr>
                <% for layout in @layouts %>
                  <tr>
                    <td><%= layout.id %></td>
                    <td><%= layout.name %></td>
                    <td><%= layout.template %></td>
                    <td><%= link_to 'Details zeigen', admin_layout_path(layout) %>
                  </tr>
                <% end %>

              </table>


            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
            </div>
            <div class="col-sm-7">
              <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                <%= paginate @layouts if @layouts.any? %>
              </div>
            </div>
          </div>
        </div>
      </div>
