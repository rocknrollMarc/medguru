<div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

  <% flash.each do |key, msg| %>
  <div class="row">
    <div class="alert alert-danger alert-dismissible">
      <%= msg %>
    </div>
  </div>
  <% end %>
  <% if f.object.errors.any? %>
  <div class="col-sm-12">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <h4>
        <i class="icon fa fa-ban"></i>
        Fehler!</h4>
      <ul>
        <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
</div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Der Layout Name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :template %>
    <%= f.text_field :template, placeholder: 'Das Template des Layouts', class: 'form-control' %>
  </div>

  <div class="layout_parts">
    <%= f.fields_for :layout_parts %>
    <br />
    <%= f.link_to_add "Layout Block hinzufügen", :layout_parts , class:'btn btn-default btn-sm'%>
  </div>

  <div class="answers">
    <br />
    <br />
    <%= f.submit 'Speichern', class:'btn btn-default btn-sm' %>
  </div>
